{
    "manifest_version": 2,
    "name": "Wikipedia Sidebar",
    "description": "Wikipedia abstracts in a sidebar.",
    "version": "1.9",
    "homepage_url": "https://github.com/strangel8p/Wikipedia-Sidebar",

    "icons": {
        "48": "wikipedia.svg",
        "96": "wikipedia.svg"
    },

    "applications": {
        "gecko": {
            "id": "wikipedia-sidebar@strangel8p",
            "strict_min_version": "56.0"
        }
    },

    "sidebar_action": {
        "default_title": "Wikipedia",
        "default_panel": "sidebar/panel.html",
        "default_icon": "wikipedia.svg",
        "browser_style": false
    },
    
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {"default": "Ctrl+Shift+V"},
            "description": "Sidebar Toggle"
        }
    },

    "permissions": [
        "activeTab",
        "<all_urls>"
    ]

}
